{
  "train_batch_size": 650,
  "gradient_accumulation_steps": 1,
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 3.5e-4,
      "betas": [
        0.95,
        0.999
      ],
      "eps": 1e-8,
      "weight_decay": 1e-5
    }
  },
  "fp16": {
    "enabled": true,
    "loss_scale": 0
  },
   "scheduler": {
      "type": "WarmupDecayLR",
      "params": {
          "total_num_steps": 150000,
          "warmup_min_lr": 3.5e-5,
          "warmup_max_lr": 3.5e-4,
          "warmup_num_steps": 1000
      }
  },
  "gradient_clipping": 0.25
}
